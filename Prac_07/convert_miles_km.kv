BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '10.01'
            multiline: False
            font_size: 48
            size_hint: (2, 1)
            on_text: app.handle_miles_to_kilometres()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_change_input(1)
            Button:
                text: 'Down'
                on_press: app.handle_change_input(-1)
